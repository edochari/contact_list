<html>
    <head>
       <title>
           <%= title %>
       </title>
     
       <link rel="stylesheet" href="/css/home.css" >
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fa-regular fa-address-book"></i>
            My Contacts List</h1>
        <ul id="list">
        <% for(let i of contact_list){ %>
        <li class="contact" style="display:flex;
        margin:auto;
        width:35%;
        background-color:lightcyan">
            <div class="details">
               <p id="name"><%= i.name %></p>
               <p id="phone" style="padding-left:200px"><%= i.phone %></p>
            </div>
            <div class="delete-button">
                <a href="/delete-contact/?id=<%=i._id%>" >
                    <i class="fa-solid fa-square-xmark"></i>
                </a>
            </div>
        </li>
        <%}%>
    </ul>

    <form action="create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name" />
        <input type="number" name="phone" placeholder="Enter Phone number" />
        <button type="submit" >
            Add contact
        </button>

    </form>
    <script src="https://kit.fontawesome.com/be724a632d.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>